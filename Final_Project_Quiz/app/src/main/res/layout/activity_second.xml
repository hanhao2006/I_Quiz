<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewTitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            android:layout_weight="1"
            android:fontFamily="@font/caveat_bold"
            android:text="Choose the Category"
            android:textAlignment="center"
            android:textColor="#FFEB3B"
            android:textSize="40sp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/rgCategory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"

            >

            <RadioButton
                android:id="@+id/radioButtonCategory1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GeneralKnowledge"
                android:layout_marginLeft="80dp"
                android:textColor="#fff"
                android:fontFamily="@font/caveat_bold"
                android:textSize="25sp"

                />

            <RadioButton
                android:id="@+id/radioButtonCategory2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Politics"
                android:layout_marginLeft="80dp"
                android:textColor="#fff"
                android:fontFamily="@font/caveat_bold"
                android:textSize="25sp"
                />

            <RadioButton
                android:id="@+id/radioButtonCategory3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mathamatics"
                android:layout_marginLeft="80dp"
                android:textColor="#fff"
                android:fontFamily="@font/caveat_bold"
                android:textSize="25sp"
                />

            <RadioButton
                android:id="@+id/radioButtonCategory4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Movies"
                android:layout_marginLeft="80dp"
                android:textColor="#fff"
                android:fontFamily="@font/caveat_bold"
                android:textSize="25sp"

                />

            <RadioButton
                android:id="@+id/radioButtonCategory5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Novels"
                android:textSize="25sp"
                android:layout_marginLeft="80dp"
                android:textColor="#fff"
                android:fontFamily="@font/caveat_bold"
                />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/buttonGo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="GO"
            android:textSize="25sp"
            android:textColor="#fff"
            android:background="@drawable/custom_buttons"
            android:fontFamily="@font/caveat_bold"
            android:layout_marginLeft="300dp"
            />

    </LinearLayout>
</LinearLayout>
